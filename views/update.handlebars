{{#each posts as |post|}}
  <form class="form update-form" id="blogpost" data-index-number={{post.id}}>
    <div class="form-group">

      <div class="mb-3">
        <label for="title" class="form-label">Post Title</label>
        <textarea
          class="form-control"
          id="title"
          rows="1"
        >{{post.title}}</textarea>
      </div>
    </div>
    <div class="form-group input-lg">

      <div class="mb-3">
        <label for="post" class="form-label">Body</label>
        <textarea
          class="form-control"
          id="post"
          rows="3"
        >{{post.post_body}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
    <button
      class="btn btn-sm btn-danger delete"
      data-id="{{post.id}}"
    >Delete</button>
  </form>
{{/each}}

<script src="../js/update.js"></script>
<script src="../js/delete.js"></script>