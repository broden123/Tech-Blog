{{#each posts as |post|}}
<div class="card py-2">
  <div class="card-header">
    posted by {{post.user.username}} on {{format_date post.date_created}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <p class="card-text">{{post.post_body}}</p>
  </div>
</div>
{{/each}}
{{#each comments as |comment|}}

<div class="card py-2 pl-5 ">
  <div class="card-header bg-secondary text-white">
    posted by {{comment.user.username}} on {{format_date comment.date_created}}
  </div>
  <div class="card-body">
    <p class="card-text">{{comment.comment_body}}</p>
  </div>
</div>

{{/each}}

{{#each posts as |post|}}
 <form class="form comment-form" id="blogcomment" data-index-number="{{post.id}}">
<div class="form-group">

    </div>
    <div class="form-group input-lg">

      <div class="mb-3">
        <label
          for="post"
          class="form-label"
        >Add A Comment</label>
        <textarea
          class="form-control"
          id="comment"
          rows="3"
