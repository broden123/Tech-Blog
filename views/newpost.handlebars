<form class="form newpost" id="blogpost">
  <div class="form-group">

    <div class="mb-3">
      <label for="title" class="form-label">Post Title</label>
      <textarea class="form-control" id="title" rows="1">Enter your post title</textarea>
    </div>
  </div>
  <div class="form-group input-lg">

    <div class="mb-3">
      <label for="post" class="form-label">Thoughts</label>
      <textarea class="form-control" id="post" rows="3">Enter your thoughts here</textarea>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Post</button>
  </div>

</form>
<script src="../js/newpost.js"></script>